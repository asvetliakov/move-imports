{
    "extends": [
        "tslint:latest"
    ],
    "defaultSeverity": "warning",
    "rules": {
        "no-implicit-dependencies": [
            true,
            "dev"
        ],
        "interface-name": false,
        "object-literal-sort-keys": false,
        "max-line-length": [true, 180],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    }
}
