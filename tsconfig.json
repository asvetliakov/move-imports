{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "outDir": "out",
        "lib": [
            "es2015",
            "es2016.array.include"
        ],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": ".",
        "allowJs": true,
        "strict": true,
        "typeRoots": [
            "types",
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "plugins": [
            {
                "name": "typescript-snapshots-plugin"
            }
        ]
    },
    "exclude": [
        "node_modules",
        "out",
        ".vscode-test"
    ]
}