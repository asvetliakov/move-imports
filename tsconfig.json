{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "allowJs": true,
        "typeRoots": [
            "types",
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "out",
        ".vscode-test"
    ]
}